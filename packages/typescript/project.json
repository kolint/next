{
  "name": "@kolint/typescript",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "{projectRoot}/src",
  "targets": {
    "build": {
      "options": {
        "assets": [
          {
            "input": "{projectRoot}/types/",
            "output": "./types/",
            "glob": "**/*.d.ts"
          }
        ],
        "entry": {
          "index": "{projectRoot}/src/index.ts",
          "analyzer": "{projectRoot}/src/analyzer.ts"
        },
        "package": {
          "exports": {
            ".": "./index.js",
            "./analyzer": "./analyzer.js",
            "./types/loose": {
              "types": "./types/loose.d.ts"
            },
            "./types/strict": {
              "types": "./types/strict.d.ts"
            }
          }
        }
      }
    },
    "test": {},
    "lint": {}
  }
}
