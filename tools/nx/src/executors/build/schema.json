{
  "$schema": "https://json-schema.org/draft-07/schema",
  "version": 2,
  "title": "Tsup executor",
  "description": "",
  "type": "object",
  "properties": {
    "format": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "entry": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "outputPath": {
      "type": "string"
    },
    "assets": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "input": {
                "type": "string"
              },
              "output": {
                "type": "string"
              },
              "glob": {
                "type": "string"
              },
              "ignore": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "dot": {
                "type": "boolean"
              }
            },
            "required": ["input", "output", "glob"]
          }
        ]
      }
    },
    "tsup": {
      "oneOf": [
        {
          "type": "object"
        },
        {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      ]
    },
    "package": {
      "type": "object"
    },
    "tsconfig": {
      "type": "string"
    },
    "declaration": {
      "type": "boolean"
    },
    "watch": {
      "type": "boolean"
    },
    "sourceMap": {
      "type": "boolean"
    }
  },
  "required": ["outputPath"]
}
