{
  "defaultBase": "main",
  "targetDefaults": {
    "build": {
      "executor": "@kolint-dev/nx:build",
      "dependsOn": ["^build"],
      "inputs": ["default", "^default", "{workspaceRoot}/tools/nx/**"],
      "options": {
        "entry": "{projectRoot}/src/index.ts",
        "exports": "./index.js",
        "types": "./index.d.ts",
        "assets": ["{projectRoot}/README.md", "{workspaceRoot}/LICENSE"],
        "tsconfig": "{projectRoot}/tsconfig.lib.json",
        "declaration": true,
        "sourceMap": true,
        "outputPath": "{projectRoot}/dist"
      },
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "test": {
      "executor": "@kolint-dev/nx:test",
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"],
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["{projectRoot}"]
      },
      "outputs": ["{options.outputFile}"],
      "cache": true
    },
    "nx-release-publish": {
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "build/packages/{projectName}"
      }
    }
  },
  "plugins": [
    {
      "plugin": "@nx/playwright/plugin",
      "options": {
        "targetName": "e2e"
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ],
  "release": {
    "projects": ["@kolint/*"]
  }
}
